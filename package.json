{
  "name": "middo",
  "productName": "Middo",
  "description": "Middo translate desktop app",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.com/dudaji-vn/middo-desktop-app.git",
  "author": "Dudaji Vn <dudaji@dudaji.vn>",
  "license": "MIT",
  "scripts": {
    "start": "electron-forge start",
    "build:win": "electron-builder --ia32 --x64 -w portable",
    "build:mac": "electron-builder build --mac",
    "build:linux": "electron-builder -l",
    "build:all": "electron-builder -wml",
    "build": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "appId": "middo.app",
    "productName": "Middo",
    "directories": {
      "output": "release-builds"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.3.0",
    "@electron-forge/maker-deb": "^7.3.0",
    "@electron-forge/maker-dmg": "^7.3.0",
    "@electron-forge/maker-rpm": "^7.3.0",
    "@electron-forge/maker-squirrel": "^7.3.0",
    "@electron-forge/maker-wix": "^7.3.0",
    "@electron-forge/maker-zip": "^7.3.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.3.0",
    "@electron-forge/plugin-fuses": "^7.3.0",
    "@electron/fuses": "^1.7.0",
    "electron": "^29.0.1"
  },
  "dependencies": {
    "dotenv": "^16.4.1",
    "electron-squirrel-startup": "^1.0.0"
  }
}
